<?xml version="1.0" encoding="utf-8"?>

<!--Iniciamos la etiqueta GridLayout
    Indicamos que la altura y la anchura se adapte al contenido con wrap_content
    Indicamos que tenga 4 columnas con android:columnCount="4"
    Centramos el contenido con android:layout_gravity="center"
 /-->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:layout_gravity="center"
    tools:context=".MainActivity">

        <!--Añadimos los botones
            Asignamos un id al boton para saber cual es.
            Indicamos la fila con android:layout_row="2"
            Indicamos la columna con android:layout_column="3"
            Le definimos un margen con android:layout_margin="2dp"
            Centramos el contenido con android:layout_gravity="center"
            Definimos el texto que queremos mostrar en el boton con android:text="/"
            Cambiamos el color del boton con android:backgroundTint="#F28705"
        /-->
        <Button
            android:id="@+id/botonDividir"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:text="/"
            android:backgroundTint="#F28705"/>

        <Button
            android:id="@+id/botonMultiplicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:text="*"
            android:layout_margin="2dp"
            android:backgroundTint="#F28705"
            app:layout_column="3"
            app:layout_row="6" />

        <Button
            android:id="@+id/botonRestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="3"
            android:text="-"
            android:layout_margin="2dp"
            android:backgroundTint="#F28705"
            app:layout_column="3"
            app:layout_row="7" />

        <!--Añadimos los botones
            Indicamos cuantos espacios en fila vamos a fusionar con android:layout_rowSpan="3"
            Fusionamos los espacios con android:layout_gravity="fill"
         /-->
        <Button
            android:id="@+id/botonSumar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_rowSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:text="+"
            android:backgroundTint="#F28705"/>

        <!--Añadimos los botones
            Indicamos cuantos espacios en columna vamos a fusionar con android:layout_columnSpan="3"
            Fusionamos los espacios con android:layout_gravity="fill"
         /-->
        <Button
            android:id="@+id/botonIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:text="=" />

        <Button
            android:id="@+id/botonDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="2"
            android:text=","
            android:layout_margin="2dp"
            android:backgroundTint="#F28705"
            app:layout_column="2"
            app:layout_row="8" />

        <Button
            android:id="@+id/boton0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="0"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="0"
            app:layout_row="8" />

        <Button
            android:id="@+id/boton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="1"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/boton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:text="2"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/boton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:text="3"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/boton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="4"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/boton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:text="5"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="1"
            app:layout_row="6" />

        <Button
            android:id="@+id/boton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:text="6"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="2"
            app:layout_row="6" />

        <Button
            android:id="@+id/boton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="7"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="0"
            app:layout_row="7" />

        <Button
            android:id="@+id/boton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:text="8"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="1"
            app:layout_row="7" />

        <Button
            android:id="@+id/boton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="2"
            android:text="9"
            android:layout_margin="2dp"
            android:backgroundTint="#025951"
            app:layout_column="2"
            app:layout_row="7" />

</GridLayout>