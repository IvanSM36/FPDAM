<?xml version="1.0" encoding="utf-8"?>
<!--
    android:layout_width="match_parent": Adaptamos el GridLayout al ancho de la pantalla del dispositivo
    android:layout_height="match_parent" Adaptamos el GridLayout la altura de la pantalla del dispositivo
    android:columnCount="2": Especificamos que va a contener 2 columnas
    android:rowCount="10": Especificamos que va a contener 10 filas
 -->

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="10"
    tools:context=".MainActivity">

    <!--
        android:id="@+id/imgDonut": Le damos un Id a los ImageView para identificarlos
        android:layout_width="match_parent": Indicamos el ancho especifico que queremos
        android:layout_height="match_parent" Indicamos la altura especifico que queremos
        android:layout_row="0": Indicamos la posicion de la fila
        android:layout_column="0": Indicamos la posicion de la columna
        android:scaleType="fitXY": Adaptamos el tamaño de la imagen
        app:srcCompat="@drawable/donut": Indicamos la imagen que queremos que muestre
    -->
    <ImageView
        android:id="@+id/imgDonut"
        android:layout_width="207dp"
        android:layout_height="155dp"
        android:layout_row="0"
        android:layout_column="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/donut" />

    <ImageView
        android:id="@+id/imgEclair"
        android:layout_width="207dp"
        android:layout_height="155dp"
        android:layout_row="0"
        android:layout_column="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/eclairs" />

    <!--
        android:background="#10454F": Le damos un color al fondo
        android:textColor="@color/white": Le damos un color al texto
        android:textAlignment="center": Alineamos el texto al centro
        android:textSize="21dp": Indicamos el tamaño del texto
    -->
    <TextView
        android:id="@+id/textViewDonut"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="Donut"
        android:background="#10454F"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/textViewEclair"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:background="#10454F"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="21dp"
        android:text="Eclair" />

    <ImageView
        android:id="@+id/imgFroyo"
        android:layout_width="207dp"
        android:layout_height="155dp"
        android:layout_row="2"
        android:layout_column="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/froyo" />

    <ImageView
        android:id="@+id/imgGinge"
        android:layout_width="207dp"
        android:layout_height="155dp"
        android:layout_row="2"
        android:layout_column="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/gingerbread" />

    <TextView
        android:id="@+id/textViewFroyo"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="21dp"
        android:background="#10454F"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Froyo" />

    <TextView
        android:id="@+id/textViewGinger"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
