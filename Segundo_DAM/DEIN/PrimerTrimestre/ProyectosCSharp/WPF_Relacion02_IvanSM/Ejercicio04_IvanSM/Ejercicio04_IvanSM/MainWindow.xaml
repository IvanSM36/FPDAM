<Window x:Class="Ejercicio04_IvanSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio04_IvanSM"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Target="{Binding ElementName=txtName}">
                <StackPanel Orientation="Horizontal">
                    <Image Height="30" Width="40" Source="https://cdn-icons-png.flaticon.com/512/7716/7716759.png"/>
                    <AccessText Margin="1,10,10,0" Text="_Name:"/>
                </StackPanel>
             </Label>
            <TextBox Name ="txtName" Height="30" Width="300" HorizontalAlignment="Left"/>

            <Label Target="{Binding ElementName=txtMail}"><!--Hace que al pulsar alt M se posicione en el  -->
                <StackPanel Orientation="Horizontal"> 
                    <Image Height="30" Width="30" Source="https://cdn-icons-png.flaticon.com/512/732/732200.png"/>
                    <AccessText Margin="10" Text="_Mail:"/>
                </StackPanel>
            </Label>
            <TextBox Name ="txtMail" Height="30" Width="300" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
