<Window x:Class="Ejercicio04_IvanSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio04_IvanSM"
        mc:Ignorable="d"
        Title="Imagenes" Height="500" Width="500">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Margin="100 50 100 0" CornerRadius="20" BorderBrush="Black" BorderThickness="2" Background="Beige">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.5" ShadowDepth="10" Direction="320" RenderingBias="Performance"/>
            </Border.Effect>
            <Image Name="imagen" Height="300" Width="300" Source="/image/panda.png" />
        </Border>
                
        <Button Margin="50" Height="50" Width="150"  BorderBrush="Black" Click="cambiarImage" FontSize="15" FontWeight="Bold" >Siguiente imagen</Button>
           
        </StackPanel>
    
    
    
        
</Window>
