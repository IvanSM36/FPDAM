<Window x:Class="Ejercicio01_IvanSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio01_IvanSM"
        mc:Ignorable="d"
        Title="Test" Height="200" Width="300">
    
    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="15">¿Que fruta es amarilla?</Label>
        <StackPanel Margin="20 5 20 0 ">
            <RadioButton GroupName="fruta" Name="rbFresa" FontSize="12">Fresa</RadioButton>
            <RadioButton GroupName="fruta" Name="rbPlatano" FontSize="12">Platano</RadioButton>
            <RadioButton GroupName="fruta" Name="rbArandano" FontSize="12">Arandano</RadioButton>
            <RadioButton GroupName="fruta" Name="rbPera" FontSize="12">Pera</RadioButton>
        </StackPanel>
        <Button Margin="20" Width="60" Click="comprobar">Corregir</Button>
    </StackPanel>
    
</Window>
