<Window x:Class="Ejercicio04_IvanSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio04_IvanSM"
        mc:Ignorable="d"
        Title="IES Rod.Marin" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image/pngegg.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" >
            <Button Name="botonAbrir" Height="30" Width="100" Content="Abrir fichero" Background="#FFB65DA6" Click="btnOpenFile_Click"/>
            <Button Height="30" Width="100" Content="Guardar Fichero" Margin="10 0 0 0 " Background="#FF78D6E8"/>
        </StackPanel>

        <TextBox Name="txtEditor" Grid.Row="1" Height="300" Width="700" FontSize="20" Foreground="White">
            <TextBox.Background>
                <SolidColorBrush Color="Black" Opacity="0.7"/>
            </TextBox.Background>
        </TextBox>

    </Grid>
</Window>
