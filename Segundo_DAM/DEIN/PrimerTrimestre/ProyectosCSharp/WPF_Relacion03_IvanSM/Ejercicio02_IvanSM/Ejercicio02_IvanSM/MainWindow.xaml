<Window x:Class="Ejercicio02_IvanSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio02_IvanSM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--IsReadOnly="True" Hace que el TextBox no se puede escribir -->
        <StackPanel Margin = "20">
            <TextBox Margin = "0, 50, 0 ,0" Height="70" Width="600" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" IsReadOnly="True" Text="Has seleccionado" />
            <TextBlock Margin = "80, 40, 0 ,0" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center">Escribeme algo bonito:</TextBlock>
            <TextBox Margin = "0, 20, 0 ,0" Height="100" Width="600" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" TextWrapping="Wrap"></TextBox>
        </StackPanel>
            
    </Grid>
</Window>
